<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.datapersistencewithrecyclerview.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_inputFragment"
            app:destination="@id/inputFragment" />
        <action
            android:id="@+id/action_homeFragment_to_displayFragment"
            app:destination="@id/displayFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputFragment"
        android:name="com.example.datapersistencewithrecyclerview.input.InputFragment"
        android:label="InputFragment" />
    <fragment
        android:id="@+id/displayFragment"
        android:name="com.example.datapersistencewithrecyclerview.display.DisplayFragment"
        android:label="DisplayFragment" />
</navigation>